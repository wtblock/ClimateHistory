<?xml version="1.0" encoding="utf-8"?>
<!--
	UnitCategory - associates units with a specific type of measurement
		Name - type of measurement
		Description - describes the type of measurement
		PersistedUnit - specifies the units a measurement is store on disk
	UnitConversions - collections of UnitConversion defining how to 
			convert from persisted unit to the unit in the collection
		Unit - the unit being converted to from the persisted unit
		Multiplier - the amount the PersistedUnit has to be multiplied by
		Offset - the amount added after doing the multiplication
-->
<UnitCategories>
	<UnitCategory Name="Angle" Description="Angular measurements" PersistedUnit="deg" >
		<UnitConversions>
			<UnitConversion Unit="deg" Multiplier="1" Offset="0" />
			<UnitConversion Unit="rad" Multiplier="0.0174532925" Offset="0" />
		</UnitConversions>
	</UnitCategory>
	<UnitCategory Name="Date" Description="Days since 1900" PersistedUnit="d" >
		<UnitConversions>
			<UnitConversion Unit="d" Multiplier="1" Offset="0" />
		</UnitConversions>
	</UnitCategory>
	<UnitCategory Name="Distance" Description="Measured distance" PersistedUnit="m" >
		<UnitConversions>
			<UnitConversion Unit="m" Multiplier="1" Offset="0" />
			<UnitConversion Unit="in" Multiplier="39.3700787401" Offset="0" />
			<UnitConversion Unit="ft" Multiplier="3.280839895" Offset="0" />
			<UnitConversion Unit="mi" Multiplier="0.0006215" Offset="0" />
			<UnitConversion Unit="mm" Multiplier="1000" Offset="0" />
			<UnitConversion Unit="cm" Multiplier="100" Offset="0" />
			<UnitConversion Unit="dm" Multiplier="10" Offset="0" />
			<UnitConversion Unit="km" Multiplier="0.001" Offset="0" />
		</UnitConversions>
	</UnitCategory>
	<UnitCategory Name="Temperature" Description="Measured temperature" PersistedUnit="degC" >
		<UnitConversions>
			<UnitConversion Unit="degC" Multiplier="1" Offset="0" />
			<UnitConversion Unit="degF" Multiplier="1.8" Offset="32" />
			<UnitConversion Unit="K" Multiplier="1" Offset="273.15" />
		</UnitConversions>
	</UnitCategory>
</UnitCategories>
